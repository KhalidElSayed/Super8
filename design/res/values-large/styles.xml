<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="HeaderFragmentBand">
    <item name="android:background">#F00</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="HeaderFragmentRibbon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/header_fragment_height</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="HeaderFragmentLogo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginTop">30dp</item>
  </style>

  <style name="HeaderFragmentButton" parent="android:Widget.Button.Toggle">
    <item name="android:layout_marginTop">30dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textOff">@null</item>
    <item name="android:textOn">@null</item>
  </style>

  <style name="HeaderFragmentPowerButton" parent="HeaderFragmentButton.PowerButtonBase">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="HeaderFragmentPlayButton" parent="HeaderFragmentButton.PlayButtonBase">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

</resources>