<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ignition="http://github.com/ignition/schema"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg_1"
    android:gravity="center"
    >

  <ImageButton android:id="@+id/dashboard_scan_barcode_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/barcode"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="- OR -"
    android:textSize="36sp"
    android:layout_marginTop="20dip"
    android:layout_marginBottom="20dip"
    />
    
  <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <EditText android:id="@+id/dashboard_search_input"
      android:layout_width="250dip"
      android:layout_height="wrap_content"
      android:hint="Search for a title"
      android:inputType="text|textAutoCorrect|textAutoComplete"
      android:imeOptions="actionSearch"
      />
    <Button android:id="@+id/dashboard_search_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Go"
      android:onClick="onTitleSearchButtonClick"    
      />    
  </LinearLayout>
  
</LinearLayout>
