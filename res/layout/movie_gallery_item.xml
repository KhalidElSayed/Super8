<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:ignition="http://github.com/ignition/schema"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >

  <TextView
    android:id="@+id/movie_gallery_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:textStyle="bold" />

  <com.github.ignition.core.widgets.RemoteImageView
    android:id="@+id/movie_gallery_item_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/movie_gallery_item_title"
    android:layout_centerHorizontal="true"
    android:scaleType="centerCrop"
    ignition:autoLoad="false" />

</RelativeLayout>